{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "start": {
      "outputs": [],
      "persistent": true,
      "cache": false
    },
    "dev": {
      "dependsOn": [],
      "outputs": [],
      "persistent": true,
      "cache": false
    },
    "test:e2e": {
      "dependsOn": [],
      "outputs": []
    }
  }
}
