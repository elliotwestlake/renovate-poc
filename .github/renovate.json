{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "additionalBranchPrefix": "{{parentDir}}-",
  "semanticCommitScope": "{{parentDir}}",
  "packageRules": [
    {
      "groupName": "react packages",
      "semanticCommitScope": "",
      "additionalBranchPrefix": "",
      "matchPackageNames": [
        "/^react$/",
        "/^react-dom$/",
        "/^@types/react$/",
        "/^@types/react-dom$/"
      ]
    }
  ]
}
